@model Ecommerce.Model.Product
@{
    ViewData["Title"] = "Ürün Düzenle";
}

<h1>Ürün Düzenle</h1>
<form asp-action="Edit" asp-route-id="@Model.Id">
    <div asp-validation-summary="ModelOnly" class="text-danger">
    </div>
    <div class="form-horizontal">
        <div class="form-group">
            <label asp-for="Name" class="col-md-3 col-form-label"></label>
            <div class="col-md-9">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-3 col-form-label"></label>
            <div class="col-md-9">
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="col-md-3 col-form-label"></label>
            <div class="col-md-9">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId" class="col-md-3 col-form-label"></label>
            <div class="col-md-9">
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                    <option value="">Seçiniz</option>
                </select>
            </div>
        </div>
        <input asp-for="CreatedAt" type="hidden" />
        <input asp-for="CreatedBy" type="hidden" />
        <input asp-for="UpdatedAt" type="hidden" />
        <input asp-for="UpdatedBy" type="hidden" />
        <div class="form-group">
            <div class="col-md-9 offset-md-3">
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        </div>
    </div>
</form>
